<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Show List</title>
	</head>
	<body>
		<nav>
			<ul>
				<li>
					<a href="/">Home</a>
				</li>
			</ul>
		</nav>
		<h1>TV SHOWS</h1>
		<ul>
			<% shows.forEach(show => { %>
				<li>
				  <a href="/shows/<%=show._id %>"> <%=show.name %> </a>
				  <form name='deletebutton' action="/shows/<%= show.id %>?_method=DELETE" method="POST">
					<input type="submit" value="DELETE" />
				  </form>
				  <a href="/shows/<%=show._id %>/edit">Edit</a>
				</li>
				<% }) %>
		</ul>

<nav>
	<a href="/shows/new">Add a New Show</a>
</nav>
	</body>
</html>