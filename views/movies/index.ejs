<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Movie List</title>
	</head>
	<body>
		<nav>
			<ul>
				<li>
					<a href="/">Home</a>
				</li>
			</ul>
		</nav>
		<h1>Movies index page</h1>
		<ul>
			<% movies.forEach(movie => { %>
				<li>
				  <a href="/movies/<%=movie._id %>"> <%=movie.name %> </a>
				  <form name='deletebutton' action="/movies/<%= movie.id %>?_method=DELETE" method="POST">
					<input type="submit" value="DELETE" />
				  </form>
				  <a href="/movies/<%=movie._id %>/edit">Edit</a>
				</li>
				<% }) %>
		</ul>

<nav>
	<a href="/movies/new">Add a New Movie</a>
</nav>
	</body>
</html>